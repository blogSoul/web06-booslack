{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    // "strict": true,
    "baseUrl": "./src",
    "paths": {
      "routes/*": ["routes/*"],
      "app": ["app"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "bin"],
  "exclude": ["node_modules"]
}
